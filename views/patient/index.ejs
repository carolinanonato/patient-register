<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Patients</title>
    <link rel="stylesheet" href="./style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>

<body class="container"
    style="margin-top: 50px; background-image: url(https://images.unsplash.com/photo-1557825835-a526494be845?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80);">

    <% if (messages.success) { %>
        <div class="alert alert-success" role="alert">
            <%- messages.success %>
        </div>
        <% } %>

            <% if (messages.error) { %>
                <div class="alert alert-danger" role="alert">
                    <%- messages.error %>
                </div>
                <% } %>

                    <div class="card">
                        <div class="card-header bg-info">
                            <ul class="nav nav-pills w-100 ">
                                <li class="nav-pill active">
                                    <a class="nav-link text-white">Patient Information</a>
                                </li>
                                <li class="nav-pill ml-auto mr-auto rounded">
                                    <a class="nav-link active rounded bg-light text-info"
                                        style="font-size: 12px; font-weight: bold;" href="/patient/add">Add
                                        Patient</a>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body ">

                            <% if(data.length) { %>
                                <table class="table">
                                    <thead>
                                        <tr style="font-size: 13px">
                                            <th scope="col">#</th>
                                            <th scope="col">First Name</th>
                                            <th scope="col">Last Name</th>
                                            <th scope="col">Date of Birth</th>
                                            <th scope="col">Phone</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Doctor</th>
                                            <th scope="col">Speciality</th>
                                            <th scope="col">Last Appointment</th>
                                            <th width="200px">Action</th>

                                        </tr>
                                    </thead>
                                    <tbody style="font-size: 12px;">
                                        <% for(var i=0; i< data.length; i++) { %>
                                            <tr>
                                                <th scope="row">
                                                    <%= (i+1) %>
                                                </th>
                                                <td>
                                                    <%= data[i].firstname%>
                                                </td>
                                                <td>
                                                    <%= data[i].lastname%>
                                                </td>
                                                <td>
                                                    <%= data[i].dob%>
                                                </td>
                                                <td>
                                                    <%= data[i].phone%>
                                                </td>
                                                <td>
                                                    <%= data[i].email%>
                                                </td>
                                                <td>
                                                    <%=data[i].doctor%>

                                                </td>
                                                <td>
                                                    <%=data[i].speciality%>

                                                </td>
                                                <td>
                                                    <%=data[i].lastappointment%>

                                                </td>
                                                <td style="display: flex; ">
                                                    <a class="btn btn-success "
                                                        style=" font-size: 10px; margin-right: 5px; background-color: darkcyan;"
                                                        href="../patient/edit/<%=data[i].id%>">Edit</a>
                                                    <a class="btn btn-danger delete"
                                                        style="font-size: 10px; background-color: darkred;"
                                                        onclick="return alert('Are You sure?')"
                                                        href="../patient/delete/<%=data[i].id%>">Delete</a>
                                                </td>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                </table>
                                <% } %>

                                    <% if(!data.length) { %>
                                        <p class="text-center">No patient found!</p>
                                        <% } %>

                        </div>
                    </div>

</body>



</html>